{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@component/*": [
        "src/components/*"
      ],
      "@hook/*": [
        "src/hooks/*"
      ],
      "@page/*": [
        "src/pages/*"
      ],
      "@style/*": [
        "src/styles/*"
      ],
      "@util/*": [
        "src/utils/*"
      ],
      "@store/*": [
        "src/stores/*"
      ],
      "@interface/*": [
        "src/interfaces/*"
      ],
      "@asset/*": [
        "src/assets/*"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
